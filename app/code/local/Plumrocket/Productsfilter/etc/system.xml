<?xml version="1.0"?>
<config>
	<tabs>
        <plumrocket>
            <label>
            	<![CDATA[<div style="padding-left:22px; background: url(data:image/png;base64,) left 50% no-repeat;">Plumrocket Inc.</div>]]> 
            </label>
            <sort_order>101</sort_order>
        </plumrocket>
    </tabs>
	
	<sections>
		<productsfilter  translate="label" module="productsfilter">                    
			<label>Product Filter</label>
			<tab>plumrocket</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1900</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>            
			<groups>
				<general translate="label"> 
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<version translate="label">
		                    <frontend_type>text</frontend_type>
		                    <frontend_model>productsfilter/system_config_version</frontend_model>
		                    <sort_order>10</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </version>
						<enable translate="label">
							<label>Enable Extension</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable>
						<serial translate="label">
                            <label>Serial Key</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>plumbase/system_config_form_field</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[
                                Your can find <strong>Serial Key</strong> in your account at <a target="_blank" href="https://store.plumrocket.com/downloadable/customer/products/">store.plumrocket.com</a>. For manual <a target="_blank" href="http://wiki.plumrocket.com/wiki/License_Installation">click here</a>.
                            ]]></comment>
                        </serial>
					</fields>
				</general>
				
				<attributes translate="label"> 
					<label>Filter Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<enable translate="label">
							<label>Enable Filter Attributes</label>
							<frontend_type>multiselect</frontend_type>
							<frontend_model>productsfilter/system_config_attributes</frontend_model>
                            <source_model>productsfilter/attributes</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Drag &amp; drop attributes that should be used as product filters.</comment>
						</enable>
						<group translate="label">
							<label>Enabled Filter Attributes</label>
							<frontend_type>multiselect</frontend_type>
							<frontend_model>productsfilter/system_config_empty</frontend_model>
							<source_model>productsfilter/attributes</source_model>
							<backend_model>productsfilter/backend_group</backend_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</group>
						<enable_custom translate="label">
							<label>Enable Product Custom Options</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable_custom>
						<mode translate="label">
							<label>Filter Mode</label>
							<frontend_type>select</frontend_type>
							<source_model>productsfilter/modes</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Automatic mode will refresh the product list each time user selects a filter. Manual mode allows to select multiple options and then click on button to "filter"</comment>
						</mode>
						<placement translate="label">
							<label>Product Filter Placement</label>
							<frontend_type>select</frontend_type>
							<source_model>productsfilter/placements</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</placement>
					</fields>
				</attributes>
			</groups>
		</productsfilter>
	</sections>
</config>
